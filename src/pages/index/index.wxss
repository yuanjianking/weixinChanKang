/* 分类栏 */
.classify{
  position: fixed;
  top: 0px;
  left: 0;
  width: 750rpx;
  height: 30px;
  background-color: rgb(250, 250, 250);
  border-bottom: 1rpx solid rgba(170, 170, 170, 1);
  display: flex;
  align-items: center;
  z-index: 9;
}

.categories{
  font-size: 30rpx;
  width: 150rpx;
  height: 30px;
  color: gray;
  display: flex;
  align-items: center;
  justify-content: center;
}

.categories_text{
  display: flex;
  align-items: center;
  justify-content: center;
  color: black;
  height: 30px;
  /* border-bottom: 5rpx solid #e64340; */
}


/* 左右滑动 */
.swiper{
  margin-top: 30px;
}

/* 评价 */
.appraise{
  width: 750rpx;
  height: 100%;
  background-color: blue;
}

/* 商铺 */
.shop{
  width: 750rpx;
  height: 100%;
  background-color: red;
}

/* 菜单 */
.menu{
  width: 750rpx;
}

.scroll{
  display: flex;
  align-items: center;
}

.scroll_left{
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(240, 240, 240, 1);
  font-size: 32rpx;
}

.scroll_left_text{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 50px;
  background-color: rgba(240, 240, 240, 1);  
}

.scroll_left_text_active{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 50px;
  background: white;
}

.scroll_right{
  width: 600rpx;
}

.scroll_right_top{
  width: 600rpx;
  height: 25px;
  background: #f5f7f9;
  font-size: 35rpx;
  padding-left: 10rpx;
  padding-top: 10rpx;
}

.scroll_right_view{
  width: 600rpx;
  box-sizing: border-box;
  height: 100px;
  border-bottom: 5rpx solid lightgray;
  display: flex;
  align-items: center;
}

.scroll_right_view .item_left{
  width: 500rpx;
  height: 100px;
  font-size: 35rpx;
  display: flex;
  align-items: left;
}

.scroll_right_view .item_right{
  width: 100rpx;
  height: 100px;
  font-size: 40rpx;
  
}

.scroll_right_view .item_right .top{
  width: 100rpx;
  height: 50px;
}

.scroll_right_view .item_right .bottom{
  width: 100rpx;
  height: 50px;
  display: flex;
  align-items: center;
}

.remove{
  width: 50rpx;
  height: 50rpx;
  background-color: #e64340;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  border-radius: 50%;
}
.num{
  width: 50rpx;
  height: 50rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add{
  width: 95rpx;
  height: 50rpx;
  background-color: #e64340;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  border-radius: 20%;
  font-size: 30rpx
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*服务时间*/
.chose_service{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 750rpx;
  background-color:blanchedalmond;
  z-index: 9;
}

/* 购物车 */
.cart{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 50px;
  background-color: rgba(50, 50, 50, 1);
  display: flex;
  align-items: center;
  z-index: 99;
}
.cart_img_view{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: -30rpx;
  left: 15rpx;
  border-radius: 50%;
  background-color: #e64340;
  display: flex;
  justify-content:center;
  align-items:Center;
  border: 15rpx solid rgba(50, 50, 50, 1);
}

.cart_img{
  width: 70rpx;
  height: 70rpx;

}

.cart_num{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: -30rpx;
  right: -20rpx;
  background-color: #e64340;
  padding: 2.5rpx;
  border-radius: 50%;
  display: flex;
  justify-content:center;
  align-items:Center;
  color: white;
  font-size: 25rpx;
  border: 1rpx solid rgba(50, 50, 50, 0.3);

}

.cart_text{
  margin-left: 580rpx;
  width: 180rpx;
  height: 50px;
  background-color: #e64340;
  font-size: 28rpx;
  color: white;
  display: flex;
  justify-content:center;
  align-items:Center;
}

/* 下面的购物车 */
.cart_bottom_cover{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 50px;
  width: 750rpx;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9;
}

.cart_bottom{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 50px;
  width: 750rpx;
  background-color: white;
  min-height: 210rpx;
  z-index: 9;
}

.cart_bottom_view{
  display: flex;
  justify-content:space-between;
  align-items:Center;
  height: 80rpx;
  font-size: 28rpx;
  background-color: rgba(240, 240, 240, 1);
  border-bottom: 1rpx solid rgba(170, 170, 170, 0.5);
}

.cart_scroll{
  width: 750rpx;
  min-height: 80rpx;
  max-height: 65vh;
  padding-bottom: 50rpx;
  overflow:scroll;
}

.cart_scrollView{
  display: flex;
  justify-content:space-between;
  align-items:Center;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid rgba(170, 170, 170, 0.3);
}

.cart_scrollView_text{
  margin-left: 30rpx;
}

.cart_scrollView_view{
  width: 180rpx;
  margin-right: 30rpx;
  display: flex;
  justify-content:space-between;
  align-items:Center;
}